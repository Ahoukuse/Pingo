{
    "manifest_version": 2,
    "name": "Commenter",
    "version": "1.0.0",
    "description": "嘿嘿嘿",

    "icons":
    {
        "16": "img/toys.png",
        "48": "img/toys.png",
        "128": "img/toys.png"
    },
    "background":
    {
        "scripts": ["background.js"]

    },
    "browser_action":
    {
        "default_icon": "img/toys.png",
        "default_title": "嘿嘿嘿",
        "default_popup": "popup.html"
    },
    "content_scripts":[
    {
       "matches": ["<all_urls>"],
       "js": ["js/jquery-3.3.1.min.js","js/content-script.js"],
       "css":["css/theme.css"]
    }
    ],
    "permissions": [
          "tabs",
          "bookmarks",
          "activeTab"
    ]
}
