{
    "manifest_version": 2,
    "name": "Pingo",
    "version": "0.0.1",
    "description": "网页评论器插件(Beta)",

    "icons":
    {
        "16": "img/toys.png",
        "48": "img/toys.png",
        "128": "img/toys.png"
    },
    "background":
    {
        "scripts": ["background.js"]

    },
    "browser_action":
    {
        "default_icon": "img/toys.png",
        "default_title": "嘿嘿嘿",
        "default_popup": "popup.html"
    },
    "content_scripts":[
    {
       "matches": ["<all_urls>"],
       "js": ["js/jquery-3.3.1.min.js","js/content-script.js"],
       "css":["css/theme.css"]
    }
    ],
    "permissions": [
          "tabs",
          "bookmarks",
          "activeTab",
          "storage",
          "cookies",
          "https://api.ahhhh.com.cn/",
          "https://ahhhh.com.cn/",
          "http://localhost:2333/"
    ]
}
